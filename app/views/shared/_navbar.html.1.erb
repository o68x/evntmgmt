    <h1>this is the greatest navbar</h1>
</div>

<class class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
    <a class="navbar-brand" href="/">EventMGMT</a>
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navb"
        aria-expanded="true">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div id="navb" class="navbar-collapse collapse hide">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <%= link_to 'Home', '#', class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to 'Something', '#', class: "nav-link" %>
            </li>
            <li class="nav-item btn btn-primary">
                <%= link_to 'Some kind of button to create event', "#", class: "nav-link" %>
            </li>
        </ul>

        <ul class="nav navbar-nav ml-auto">
            <!-- Dropdown AVEC user connected -->
            <% if user_signed_in? %>
            <li class="dropdown">
                <button class="dropdown-toggle btn btn-dark" id="dropdownMenuButton" data-toggle="dropdown" href="#"><span
                        class="fas fa-user"></span> Log in </button>
                <ul class="dropdown-menu dropdown-menu-right p-3" style="width: 250px;">
                    <% if user_signed_in? %>
                    <li>
                        <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
                    </li>
                    <li>
                        Voici ton email :
                        <%= current_user.email %>
                    </li>
                    <li>
                        <%= link_to "Secret page", home_secret_path %>
                    </li>
                    <li>
                        <%= link_to "Edit email / password", edit_user_registration_path %>
                    </li>
                    <% else %>
                    <li>
                        <%= link_to "Sign in", new_user_session_path %>
                    </li>
                    <li>
                        <%= link_to "Sign up", new_user_registration_path %>
                    </li>
                    <% end %>
                </ul>
            </li>
        </ul>
    </div>
