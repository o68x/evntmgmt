
  <li class="list-group-item">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">
        <%= link_to event.title, admin_event_path(event.id) %>
      </h5>
      <small>
          <span class="badge badge-secondary"><%= event.is_reviewed ? 'vu' : 'à voir' %></span> |
          <span class="badge badge-secondary"><%= event.is_validated ? 'validé' : 'à valider' %></span>
      </small>
    </div>
    <div class="d-flex w-100 justify-content-between">
      <small class="mb-1">
        <%= event.start_date.strftime("%d/%m/%y") %></small>
      <small class="mb-1">
          <%= link_to "modifier", edit_admin_event_path(event.id) %> |
          <%= link_to "supprimer", admin_event_path(event.id), method: :delete %>
      </small>
    </div>
  </li>
