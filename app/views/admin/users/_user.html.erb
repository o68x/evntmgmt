<li class="list-group-item">
    <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">
            <%= link_to user.full_name, admin_user_path(user.id) %>
        </h5>
        <span>
            (<%= user.id %>)</span>
    </div>

    <div class="d-flex w-100 justify-content-between">
        <%= user.email %>
        <small class="mb-1">
            <%= link_to "modifier", edit_admin_user_path(user.id) %> |
            <%= link_to "supprimer", admin_user_path(user.id), method: :delete %>
        </small>
    </div>
</li>